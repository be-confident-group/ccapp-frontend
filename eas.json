{
  "cli": {
    "version": ">= 16.20.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "RNMAPBOX_MAPS_DOWNLOAD_TOKEN": "${secret:RNMAPBOX_MAPS_DOWNLOAD_TOKEN}",
        "MAPBOX_ACCESS_TOKEN": "${secret:MAPBOX_ACCESS_TOKEN}"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "RNMAPBOX_MAPS_DOWNLOAD_TOKEN": "${secret:RNMAPBOX_MAPS_DOWNLOAD_TOKEN}",
        "MAPBOX_ACCESS_TOKEN": "${secret:MAPBOX_ACCESS_TOKEN}",
        "ANDROID_HOME": "/Users/ashkan/Library/Android/sdk",
        "ANDROID_SDK_ROOT": "/Users/ashkan/Library/Android/sdk"
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "RNMAPBOX_MAPS_DOWNLOAD_TOKEN": "${secret:RNMAPBOX_MAPS_DOWNLOAD_TOKEN}",
        "MAPBOX_ACCESS_TOKEN": "${secret:MAPBOX_ACCESS_TOKEN}"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
